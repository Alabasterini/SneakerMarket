<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkName.MainPage"
             BackgroundColor="#F5F5F5"
             Title="SneakerMarket">

    <Grid RowDefinitions="Auto, Auto, Auto, *" Padding="20">

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <VerticalStackLayout Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                <Label Text="Witaj w" FontSize="14" TextColor="Gray" />
                <Label Text="SneakerMarket" FontSize="24" FontAttributes="Bold" TextColor="Black" />
            </VerticalStackLayout>

            <Button Grid.Column="1"
            BackgroundColor="Transparent"
            BorderColor="#E0E0E0"
            BorderWidth="1"
            CornerRadius="25"
            HeightRequest="50"
            WidthRequest="50"
            Margin="0,0,10,0"
            HorizontalOptions="End"
            VerticalOptions="Center"
            Clicked="OnCartClicked"
            ImageSource="busket.png">
            </Button>

            <Button Grid.Column="2"
            BackgroundColor="Transparent"
            BorderColor="#E0E0E0"
            BorderWidth="1"
            CornerRadius="25"
            HeightRequest="50"
            WidthRequest="50"
            HorizontalOptions="End"
            VerticalOptions="Center"
            Clicked="OnProfileClicked"
            ImageSource="prof_pic.png">
            </Button>
        </Grid>

        <Border Grid.Row="1" StrokeShape="RoundRectangle 12" StrokeThickness="0" BackgroundColor="White" Margin="0,0,0,20">
            <SearchBar x:Name="SneakerSearchBar" 
                       Placeholder="Szukaj ulubionych butów..." 
                       PlaceholderColor="Gray"
                       TextColor="Black"
                       TextChanged="OnSearchTextChanged"
                       CancelButtonColor="Black"/>
        </Border>

        <ScrollView Grid.Row="2" Orientation="Horizontal" HorizontalScrollBarVisibility="Never" Margin="0,0,0,20">
            <HorizontalStackLayout x:Name="BrandsLayout" Spacing="10">
                <Button Text="Wszystkie" BackgroundColor="Black" TextColor="White" CornerRadius="10" Padding="15,0" Clicked="OnBrandClicked"/>
                <Button Text="Nike" BackgroundColor="White" TextColor="Black" CornerRadius="10" Padding="15,0" BorderWidth="1" BorderColor="#E0E0E0" Clicked="OnBrandClicked"/>
                <Button Text="Jordan" BackgroundColor="White" TextColor="Black" CornerRadius="10" Padding="15,0" BorderWidth="1" BorderColor="#E0E0E0" Clicked="OnBrandClicked"/>
                <Button Text="Adidas" BackgroundColor="White" TextColor="Black" CornerRadius="10" Padding="15,0" BorderWidth="1" BorderColor="#E0E0E0" Clicked="OnBrandClicked"/>
                <Button Text="Yeezy" BackgroundColor="White" TextColor="Black" CornerRadius="10" Padding="15,0" BorderWidth="1" BorderColor="#E0E0E0" Clicked="OnBrandClicked"/>
                <Button Text="New Balance" BackgroundColor="White" TextColor="Black" CornerRadius="10" Padding="15,0" BorderWidth="1" BorderColor="#E0E0E0" Clicked="OnBrandClicked"/>
            </HorizontalStackLayout>
        </ScrollView>

        <RefreshView Grid.Row="3">
            <CollectionView x:Name="ProductsListView" SelectionMode="Single" SelectionChanged="OnProductSelected">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="15" VerticalItemSpacing="15" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeShape="RoundRectangle 15" StrokeThickness="0" BackgroundColor="White" HeightRequest="220">
                            <VerticalStackLayout Padding="7.5" Spacing="5">
                                <Image Source="dotnet_bot.png" HeightRequest="80" Aspect="AspectFit" Margin="0,10" />
                                
                                <Label Text="{Binding nazwa_marki}" FontSize="12" TextColor="Gray" />
                                <Label Text="{Binding nazwa_modelu}" FontSize="14" FontAttributes="Bold" MaxLines="2" LineBreakMode="TailTruncation" TextColor="Black"/>
                                <Label Text="{Binding kolorystyka}" FontSize="14" FontAttributes="Bold" MaxLines="2" LineBreakMode="TailTruncation" TextColor="Black"/> 
                                <HorizontalStackLayout Spacing="5" VerticalOptions="End">
                                    <Label Text="{Binding cena_retail, StringFormat='${0}'}" FontSize="16" FontAttributes="Bold" TextColor="#2E7D32" />
                                    <Label Text="Retail" FontSize="10" TextColor="Gray" VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

    </Grid>
</ContentPage>